alias ls='ls -G -h'
alias la='ll -a'
alias df='df -h'
alias du='du -h'

#bundler aliases
alias b="nocorrect bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"
alias ber='be rails'
alias berg='ber g'
alias bers='ber s'
alias berc='ber c'
alias bercs='berc --sandbox'
alias bec='be cucumber'

# git
alias gwds="gwd --staged"
alias glga="git log --topo-order --all --graph --pretty=format:\${_git_log_medium_format}"
alias glgb="git log --topo-order --all --graph --pretty=format:\${_git_log_brief_format}"
alias gic="git commit -m \"Initial commit\" --allow-empty"
alias gia.="gia ."
alias gmf="gm --ff"
alias glf="git log --follow"

# probcli
alias probcli="rlwrap /Users/ohcibi/Applications/ProB/probcli -repl -p REPL_UNICODE TRUE -init"

# mvim
alias :e="mvim"

#ember
alias em=ember

#ssh
alias ssh="TERM=xterm-256color ssh"
alias brew="TERM=xterm-256color brew"

#ack
alias ack="ag"

#fuck
alias fuck='eval $(thefuck $(fc -ln -1 | tail -n 1)); fc -R'

#fasd
alias f="fasd"
alias :e="f -e vim -f -i"

#gittower
alias t="gittower ."

#grep
alias -g G=grep
alias -g Gv='grep -v'

#ps
alias psx='ps aux'

#brew
alias bubu='brew update && brew upgrade'
alias bubi='brew update && brew install'

#quicklook
alias q='qlmanage -p 2>/dev/null'

#vim
if [ -z $NVIM_LISTEN_ADDRESS ]; then
  alias vim='NVIM_LISTEN_ADDRESS=/tmp/nvimsocket nvim'
  alias nvim='NVIM_LISTEN_ADDRESS=/tmp/nvimsocket nvim'
else
  alias vim='nvr'
  alias nvim='nvr'
fi
